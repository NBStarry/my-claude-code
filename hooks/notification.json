{
  "description": "QQ 消息通知 — 通过 LLOneBot API 发送格式化通知到手机 QQ",
  "hooks": {
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/notify-qq.sh permission_prompt"
          }
        ]
      },
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/notify-qq.sh idle_prompt"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/notify-qq.sh stop"
          }
        ]
      }
    ]
  }
}
